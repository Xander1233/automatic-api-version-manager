{
  "compileOnSave": false,
  "compilerOptions": {
    "noImplicitAny": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2017",
    "outDir": "./dist",
    "lib": [
      "es7"
    ],
    "sourceMap": false,
    "removeComments": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "./src"
  ]
}
